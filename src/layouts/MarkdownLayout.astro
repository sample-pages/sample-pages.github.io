---
import Layout from "../layouts/Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title=`${frontmatter.title}｜第8回うぃーすた全国交流会`>
  <div class="text-color mt-[140px] lg:mt-[140px] margin-default">
    <div style="height: 10px;"></div>
    <div class="flex">
      <a
        href="#"
        onclick="history.back(); return false;"
        class="text-sm lg:text-[17px] zen-kaku-gothic-new font-medium hover-color"
        style="margin-right: 10px; display: flex; align-items: center;"
        ><i class="ri-arrow-left-line" style="font-size: 20px;"></i>&nbsp;戻る</a
      >
    </div>
    <div style="height: 24px;"></div>
    <div class="zen-kaku-gothic-new text-base lg:text-xl">
      <span class="font-medium">
        {frontmatter.title}
      </span>
      <div style="height: 5px;"></div>
      <span>
        {
          frontmatter.update ? (
            <div class="update-content">
              <a class="text-sm lg:text-base">{frontmatter.date}</a>
              &nbsp;
              <a class="text-sm lg:text-base">{frontmatter.update}</a>
              <div style="height: 5px;" />
              {frontmatter.tags && frontmatter.tags.length > 0 && (
                <>
                  {frontmatter.tags.map((tag: any) => (
                    <a
                      href={`/tags/${tag}`}
                      class="text-sm hover-color lg:text-base"
                      style="padding-right: 3px;"
                    >
                      ＃{tag}
                    </a>
                  ))}
                </>
              )}
            </div>
          ) : (
            <div class="no-update-content">
              <a class="text-sm lg:text-lg">{frontmatter.date}</a>
              <div style="height: 5px;" />
              {frontmatter.tags && frontmatter.tags.length > 0 && (
                <>
                  {frontmatter.tags.map((tag: any) => (
                    <a
                      href={`/tags/${tag}`}
                      class="text-sm hover-color lg:text-base"
                      style="padding-right: 3px;"
                    >
                      ＃{tag}
                    </a>
                  ))}
                </>
              )}
            </div>
          )
        }
      </span>
      <div style="height: 24px;"></div>
      <div
        class="text-sm link blog-width lg:text-[17px]"
        style="letter-spacing: .025em; margin-bottom: 3px; line-height: 2.05;"
      >
        <slot />
      </div>
    </div>
  </div>
  </div>
  <div style="height: 70px;"></div>
</Layout>

<script>
  const backToTopButton = document.getElementById('backToTop');

  backToTopButton?.addEventListener('click', (event) => {
    event.preventDefault(); // ← ← これが重要（デフォルトの # へのジャンプを防止）
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
</script>