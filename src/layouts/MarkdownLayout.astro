---
import Layout from "../layouts/Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title=`${frontmatter.title}｜第8回うぃーすた全国交流会`>
  <div class="text-color margin-contents">
    <div style="height: 10px;"></div>
    <div
      class="max-lg:p-8 lg:p-10 max-lg: mt-[128px] lg:mt-[115px] text-color margin-contents header_bcolor rounded-[40px] shadow-md"
      style="max-width: 900px; width: 100%;"
    >
    <div class="flex">
      <a
        href="#"
        onclick="history.back(); return false;"
        class="text-sm lg:text-[17px] zen-kaku-gothic-new font-medium hover-color"
        style="margin-right: 10px; display: flex; align-items: center;"
        ><i class="ri-arrow-left-line" style="font-size: 20px;"></i>&nbsp;戻る</a
      >
    </div>
    <div style="height: 24px;"></div>
    <div class="zen-kaku-gothic-new text-base lg:text-xl">
      <span class="font-medium">
        {frontmatter.title}
      </span>
      <div style="height: 5px;"></div>
      <span>
        {
          frontmatter.update ? (
            <div class="update-content">
              <a class="text-sm lg:text-base">{frontmatter.date}</a>
              &nbsp;
              <a class="text-sm lg:text-base">{frontmatter.update}</a>
              <div style="height: 5px;" />
              {frontmatter.tags && frontmatter.tags.length > 0 && (
                <>
                  {frontmatter.tags.map((tag: any) => (
                    <a
                      href={`/tags/${tag}`}
                      class="text-sm hover-color lg:text-base"
                      style="padding-right: 3px;"
                    >
                      ＃{tag}
                    </a>
                  ))}
                </>
              )}
            </div>
          ) : (
            <div class="no-update-content">
              <a class="text-sm lg:text-lg">{frontmatter.date}</a>
              <div style="height: 5px;" />
              {frontmatter.tags && frontmatter.tags.length > 0 && (
                <>
                  {frontmatter.tags.map((tag: any) => (
                    <a
                      href={`/tags/${tag}`}
                      class="text-sm hover-color lg:text-base"
                      style="padding-right: 3px;"
                    >
                      ＃{tag}
                    </a>
                  ))}
                </>
              )}
            </div>
          )
        }
      </span>
      <div style="height: 24px;"></div>
      <div
        class="text-sm link blog-width lg:text-[17px]"
        style="letter-spacing: .025em; margin-bottom: 50px; line-height: 2.05;"
      >
        <slot />
      </div>
      <div class="flex items-center justify-center">
        <a
          href="#page-top"
          class="text-sm lg:text-[17px] flex items-center justify-center zen-kaku-gothic-new font-medium page-top hover-color text-sm lg:text-[17px]"
          style="margin-bottom: 8px;"
          ><i class="ri-arrow-turn-forward-line" style="font-size: 20px;"
          ></i>&nbsp;&nbsp;トップに戻る</a
        >
      </div>
    </div>
  </div>
  </div>
  <div style="height: 70px;"></div>
</Layout>
