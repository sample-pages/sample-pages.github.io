---
import Layout from "../layouts/Layout.astro";

const { frontmatter } = Astro.props;

// タグ名ごとの色を定義
const tagColors: Record<string, string> = {

  // 他のタグもここに追加
};
---

<Layout title={`${frontmatter.title} - 第8回うぃーすた全国交流会`}>
  <div class="relative z-[-1] mt-[80px] lg:mt-[78px] bg-[#fffdfd] border-b-[4px] border-red-100 w-full md:h-72 max-md:h-64 flex flex-col justify-center pl-8 zen-kaku-gothic-new">
    <span class="ml-10 pt-3 max-md:ml-1 text-[50px] font-bold outline-text tracking-widest z-0" style="display: inline-block;
  background: linear-gradient(90deg, #000 40%, #fff 50%, #000 60%);
  background-size: 200% 100%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1;">
      NEWS
    </span>
    
    <span class="bg-[#fffdfd] mt-3 ml-10 pb-3 h-30 max-md:ml-1 text-[20px] z-10">
      お知らせ
    </span>
  </div>
  <div class="bg-white/30 text-color zen-kaku-gothic-new text-sm lg:text-base" style="line-height: 2.05;">
    <div class="margin-contents pt-8 md:px-12 max-md:px-6">

    <div class="h-[15px] md:h-[35px]"></div>
    <div class="flex">
      <a
        href="#"
        onclick="history.back(); return false;"
        class="text-sm lg:text-[17px] zen-kaku-gothic-new font-medium tag-hover"
        style="margin-right: 10px; display: flex; align-items: center;"
      >
        <i class="ri-arrow-left-line" style="font-size: 20px;"></i>&nbsp;戻る
      </a>
    </div>
    <div style="height: 24px;"></div>
    <div class="zen-kaku-gothic-new text-base lg:text-xl">
      <span class="md:text-lg max-md:text-base font-medium">
        {frontmatter.title}
      </span>
      <div style="height: 5px;"></div>
      <span>
        {frontmatter.update ? (
          <div class="update-content">
            <a class="text-sm lg:text-base">{frontmatter.date}</a>
            &nbsp;
            <a class="text-sm lg:text-base">{frontmatter.update}</a>
            <div style="height: 5px;" />
            {frontmatter.tags && frontmatter.tags.length > 0 && (
              <>
                {frontmatter.tags.map((tag: any) => (
                  <a
                    href={`/tags/${tag}`}
                    class={`text-xs px-2 py-[2px] rounded-full text-black mr-1 mb-1 ${
                      tagColors[tag] || "bg-white"
                    } hover-color`}
                  >
                    {tag}
                  </a>
                ))}
              </>
            )}
          </div>
        ) : (
          <div class="no-update-content">
            <a class="text-sm lg:text-lg">{frontmatter.date}</a>
            <div style="height: 5px;" />
            {frontmatter.tags && frontmatter.tags.length > 0 && (
              <>
                {frontmatter.tags.map((tag: any) => (
                  <a
                    href={`/tags/${tag}`}
                    class={`text-xs px-2 py-[2px] rounded-full text-black border-[1px] border-red-200 ${
                      tagColors[tag] || "bg-white"
                    } tag-hover`}
                  >
                    {tag}
                  </a>
                ))}
              </>
            )}
          </div>
        )}
      </span>
      <div style="height: 24px;"></div>
      <div
        class="text-sm link blog-width lg:text-[17px]"
        style="letter-spacing: .025em; margin-bottom: 3px; line-height: 2.05;"
      >
        <slot />
      </div>
      <div style="height: 120px;"></div>
    </div>
  </div>
</Layout>

<style>
  /* .blog-width の中にある img タグすべてに適用 */
  .blog-width :global(img) {
    border-radius: 0.75rem; /* rounded-xl 相当 */
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1); /* shadow-lg 相当 */

    /* 画像がはみ出さないように念のため */
    max-width: 100%;
    height: auto;
    display: block;       /* ブロック要素にする */
    margin-left: auto;    /* 左側の余白を自動調整 */
    margin-right: auto;   /* 右側の余白を自動調整 */
  }
</style>