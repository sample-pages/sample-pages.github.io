<script>
  const revealElements = document.querySelectorAll('.reveal');

const io = new IntersectionObserver((entries, observer) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('is-visible');
      // 一度だけアニメーションさせるなら unobserve（コメントアウトすると何度でも発火）
      observer.unobserve(entry.target);
    } else {
      // もしスクロールで再度非表示→再表示したいならこの行を有効化
      // entry.target.classList.remove('is-visible');
    }
  });
}, {
  threshold: 0.15,           // 15% 見えたら発火
  rootMargin: '0px 0px -10% 0px' // 少し早めに発火させたい場合
});

revealElements.forEach(el => io.observe(el));

// ページ全体に対する割合で制御（0〜1）
const minRatio = 0.05; // ページの5%を超えたら表示
const maxRatio = 0.95;  // ページの80%を超えたら非表示

const buttons = [
  document.getElementById('contactButton'),
  document.getElementById('contactButtonLeft')
];

// 初期状態は非表示
buttons.forEach(btn => {
  if (!btn) return;
  // 初期設定のクラスはHTML側にあるため、ここではスクロールロジックと同じ関数を定義して呼び出します。
});

// スクロール時の処理を関数として定義
const updateContactButtons = () => {
  const scrollTop = window.scrollY;
  // スクロールできる範囲（ドキュメント全体の高さ - ビューポートの高さ）
  const docHeight = document.documentElement.scrollHeight - window.innerHeight;
  // スクロール比率
  const scrollRatio = docHeight > 0 ? scrollTop / docHeight : 0; // docHeightが0でないことを確認

  buttons.forEach(btn => {
    if (!btn) return;
    if (scrollRatio > minRatio && scrollRatio < maxRatio) {
      // 表示する
      btn.classList.remove('opacity-0', 'pointer-events-none');
      btn.classList.add('opacity-100');
    } else {
      // 非表示にする
      btn.classList.add('opacity-0', 'pointer-events-none');
      btn.classList.remove('opacity-100');
    }
  });
};

// スクロールイベントリスナーを設定
window.addEventListener('scroll', updateContactButtons);

// ページ読み込み時にも一度実行して、初期のボタンの状態を設定する
updateContactButtons();

window.addEventListener("load", () => {
    const btn = document.getElementById("contactButtonLeft");
    if (!btn) return;

    // フェードイン用 transition を “初回だけ” 適用
    btn.classList.add("transition-opacity", "duration-500");

    // 次のフレームで表示（これでフェードが滑らか）
    requestAnimationFrame(() => {
      btn.classList.remove("opacity-0", "pointer-events-none");
    });
  });


</script>

