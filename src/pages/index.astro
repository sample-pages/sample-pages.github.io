<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('bubble-container');
    if (!container) return;

    // ▼▼▼ 設定エリア ▼▼▼
    
    const IMAGE_PATHS = [
      '/images/bubble_1.png',
      '/images/bubble_2.png',
      '/images/bubble_3.png'
    ];

    const BUBBLE_COUNT = 12;
    
    // ▲▲▲ 設定エリア終了 ▲▲▲
    
    const bubbles = [];

    // シャボン玉を生成
    for (let i = 0; i < BUBBLE_COUNT; i++) {
      const bubble = document.createElement('img');
      
      const randomImgIndex = Math.floor(Math.random() * IMAGE_PATHS.length);
      bubble.src = IMAGE_PATHS[randomImgIndex] ?? "";

      bubble.classList.add('absolute');
      bubble.alt = ""; 

      // ▼ 修正: サイズのばらつきを大きく (40px 〜 240px)
      const size = Math.random() * 200 + 40;

      // ランダムなパラメータ
      const initialX = Math.random() * 100;
      const initialY = Math.random() * window.innerHeight;

      // ▼ 修正: 速度のばらつきを大きく (0.05 〜 0.8)
      // ※数字が小さいほど遠く（遅く）、大きいほど手前（速く）に見えます
      const speed = Math.random() * 0.75 + 0.05;

      // 初期スタイル適用
      bubble.style.width = `${size}px`;
      bubble.style.height = `auto`;
      bubble.style.left = `${initialX}%`;
      
      // ▼ 修正: 透明度のばらつきを大きく (0.1 〜 0.7)
      bubble.style.opacity = (Math.random() * 0.6 + 0.1).toString();

      container.appendChild(bubble);

      // @ts-ignore
      bubbles.push({
        element: bubble,
        baseY: initialY,
        speed: speed,
        size: size
      });
    }

    // スクロール時の描画更新関数
    function updatePositions() {
      const scrollY = window.scrollY;
      const viewportHeight = window.innerHeight;

      bubbles.forEach(b => {
        // @ts-ignore
        let rawY = b.baseY - (scrollY * b.speed);
        
        // @ts-ignore
        // ループ計算 (大きな泡が見切れにくくするためバッファを +250 に増加)
        const loopHeight = viewportHeight + b.size + 250; 
        let displayedY = ((rawY % loopHeight) + loopHeight) % loopHeight;
        
        // @ts-ignore
        displayedY -= b.size;

        // @ts-ignore
        b.element.style.transform = `translate3d(0, ${displayedY}px, 0)`;
      });

      requestAnimationFrame(updatePositions);
    }

    updatePositions();
  });
</script>