  <script>
    const trigger = document.getElementById('sns-trigger');
    const modal = document.getElementById('sns-modal');
    const closeBtn = document.getElementById('modal-close-btn');
    const scrollContainer = document.getElementById('modal-scroll-container');
    const panel = document.getElementById('modal-panel');
  
    // ■ 開く処理
    if (trigger && modal) {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        
        // 1. まず表示エリアを確保
        modal.classList.remove('hidden');
  
        // 2. アニメーション開始（不透明度とぼかしを同時に変化）
        setTimeout(() => {
          modal.classList.remove('opacity-0');
          modal.classList.add('opacity-100');
          
          // ★ここを追加：ぼかしのアニメーション
          modal.classList.remove('backdrop-blur-none'); // ぼかし無しを削除
          modal.classList.add('backdrop-blur-sm');    // ぼかしを追加
        }, 10);
      });
    }
  
    // ■ 閉じる処理
    const closeModal = () => {
      if (modal) {
        // 1. アニメーション（透明へ、ぼかし無しへ）
        modal.classList.remove('opacity-100');
        modal.classList.add('opacity-0');
        
        // ★ここを追加：ぼかしを消すアニメーション
        modal.classList.remove('backdrop-blur-sm');
        modal.classList.add('backdrop-blur-none');
  
        // 2. 完了後に隠す (duration-300に合わせて300ms待つ)
        setTimeout(() => {
          modal.classList.add('hidden');
        }, 300);
      }
    };
  
    // ボタン・背景クリックの処理（変更なし）
    if (closeBtn) {
      closeBtn.addEventListener('click', closeModal);
    }
  
    if (scrollContainer && panel) {
      scrollContainer.addEventListener('click', (e) => {
        if (!panel.contains(e.target as Node)) {
          closeModal();
        }
      });
    }
  </script>

