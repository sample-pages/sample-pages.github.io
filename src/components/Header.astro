      const burger = document.querySelector("#burger") as HTMLElement | null;
      const close = document.querySelector("#close") as HTMLElement | null;
      const menu = document.querySelector("#menu") as HTMLElement | null;
      const contactButton = document.querySelector("#contactButton") as HTMLElement | null;

      if (burger) {
        burger.addEventListener("click", () => {
          const isActive = menu?.classList.toggle("is-active"); // メニュー開閉
          burger.classList.toggle("is-active");
          close?.classList.toggle("is-active");
          document.body.classList.toggle("no-scroll");

          // お問い合わせボタンの表示切替
          if (contactButton) {
            if (isActive) {
              contactButton.style.display = "none";
            } else {
              contactButton.style.display = "flex";
            }
          }
        });
      }

      if (close) {
        close.addEventListener("click", () => {
          menu?.classList.remove("is-active");
          burger?.classList.remove("is-active");
          close?.classList.remove("is-active");
          document.body.classList.remove("no-scroll");

          // 閉じたらボタンを再表示
          if (contactButton) contactButton.style.display = "flex";
        });
      }



      // サブメニュー内のリンククリックでメニューを閉じる
const dropdownLinks = document.querySelectorAll(".dropdown-content a");
dropdownLinks.forEach(link => {
  link.addEventListener("click", () => {
    burger?.classList.remove("is-active");
    close?.classList.remove("is-active");
    menu?.classList.remove("is-active");
  });
});

      // 全てのサブメニューのリンクにイベントを追加
      document.querySelectorAll('.dropdown-content a').forEach(link => {
        link.addEventListener('click', () => {
          const dropdown = link.closest('.dropdown') as HTMLElement | null;
          if (!dropdown) return;

          const content = dropdown.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;

          content.style.display = 'none'; // OK
        });
      });


        // 親のホバーで再表示
        document.querySelectorAll('.dropdown').forEach(dropdown => {
        const dropdownEl = dropdown as HTMLElement; // 型を明示
        dropdownEl.addEventListener('mouseenter', () => {
          const content = dropdownEl.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;
          content.style.display = 'block';
        });

        dropdownEl.addEventListener('mouseleave', () => {
          const content = dropdownEl.querySelector('.dropdown-content') as HTMLElement | null;
          if (!content) return;
          content.style.display = 'none';
        });
      });

      document.addEventListener("DOMContentLoaded", () => {
  const dropdown = document.querySelector(".dropdown");
  const dropdownContent = dropdown?.querySelector(".dropdown-content");

  // dropdownがない場合は何もしない
  if (!dropdown || !dropdownContent) return;

  // ▼ 親メニュークリックでサブメニュー開閉
  dropdown.addEventListener("click", (e) => {
    e.stopPropagation();
    dropdownContent.classList.toggle("is-active");
  });

  // ▼ 画面クリックでサブメニューを閉じる
  document.addEventListener("click", (e) => {
  if (!dropdown.contains(e.target as Node)) {
    dropdownContent.classList.remove("is-active");
  }
});
});




      document.addEventListener("DOMContentLoaded", () => {
  const topbars = document.querySelectorAll(".topbar");
  const hero = document.querySelector(".img-frame.hero");
  const isHome = window.location.pathname === "/" || window.location.pathname === "/index.html";

  if (!isHome) {
    // トップページ以外 → 常に表示
    topbars.forEach(el => el.classList.add("visible"));
    return;
  }

  if (!hero) {
    // ヒーロー画像がない場合も常時表示
    topbars.forEach(el => el.classList.add("visible"));
    return;
  }

  // トップページ：スクロールで表示切替
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.intersectionRatio > 0) {
        // ヒーローが画面内にある → 非表示
        topbars.forEach(el => el.classList.remove("visible"));
      } else {
        // ヒーローが画面外 → 表示
        topbars.forEach(el => el.classList.add("visible"));
      }
    });
  }, { threshold: [0, 0.01] });

  observer.observe(hero);
});

document.addEventListener("DOMContentLoaded", () => {
  const header = document.getElementById("mainHeader");
  if (!header) return;

  // sessionStorage にフラグがない場合のみアニメーション
  if (!sessionStorage.getItem("headerAnimated")) {
    // 初期状態を隠す
    header.style.opacity = "0";
    header.style.transform = "translateY(-50px)";

    // アニメーション開始（遅延は必要に応じて変更）
    setTimeout(() => {
      header.classList.add("slide-in");
    }, 7000);

    // フラグを保存して二度目以降はアニメーションしない
    sessionStorage.setItem("headerAnimated", "true");
  } else {
    // 二度目以降は静止状態
    header.style.opacity = "1";
    header.style.transform = "translateY(0)";
  }
});












